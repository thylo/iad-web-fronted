---
/**
 * Panel de prévisualisation
 * Responsabilité: afficher le header et le conteneur de la preview iframe
 */

interface Props {
  height?: string;
}

const { height = '400px' } = Astro.props;
---

<div class="preview-section">
  <div class="preview-header">
    <span class="preview-title">▶ Résultat</span>
    <span class="preview-indicator">●</span>
  </div>
  <div class="preview-container" style={`height: ${height}`}></div>
</div>

<style>
  .preview-section {
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .preview-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    background: var(--sl-color-gray-6);
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .preview-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--sl-color-text);
  }

  .preview-indicator {
    font-size: 0.5rem;
    color: var(--sl-color-green);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .preview-container {
    background: white;
  }
</style>
