---
/**
 * Barre d'outils de l'éditeur
 * Responsabilité: afficher les onglets et le bouton reset
 */

interface Props {
  files: {
    html?: string;
    css?: string;
    js?: string;
  };
}

const { files } = Astro.props;
---

<div class="editor-toolbar">
  <div class="editor-tabs">
    {files.html && <button class="tab-btn active" data-tab="html">HTML</button>}
    {files.css && <button class="tab-btn" data-tab="css">CSS</button>}
    {files.js && <button class="tab-btn" data-tab="js">JavaScript</button>}
  </div>
  <button class="reset-btn" title="Réinitialiser le code">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
      <path d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
      <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
    </svg>
    Réinitialiser
  </button>
</div>

<style>
  .editor-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    background: var(--sl-color-gray-6);
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .editor-tabs {
    display: flex;
    gap: 0.25rem;
  }

  .tab-btn {
    padding: 0.375rem 0.75rem;
    border: none;
    background: transparent;
    color: var(--sl-color-gray-2);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    border-radius: 0.25rem;
    transition: background 0.2s, color 0.2s;
  }

  .tab-btn:hover {
    background: var(--sl-color-gray-5);
  }

  .tab-btn.active {
    background: var(--sl-color-bg);
    color: var(--sl-color-text);
  }

  .reset-btn {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg);
    color: var(--sl-color-gray-2);
    font-size: 0.875rem;
    cursor: pointer;
    border-radius: 0.25rem;
    transition: background 0.2s, color 0.2s, border-color 0.2s;
  }

  .reset-btn:hover {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-text);
    border-color: var(--sl-color-gray-4);
  }
</style>
