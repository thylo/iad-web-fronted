---
interface Props {
  color: string;
  label?: string;
  notation?: string;
}

const { color, label, notation = 'hex' } = Astro.props;
---

<div class="iad-demo iad-swatch" x-data="{ copied: false }">
  <div class="swatch-preview" style={`background-color: ${color};`}></div>
  <div class="swatch-info">
    {label && <div class="swatch-label">{label}</div>}
    <code class="swatch-code">{color}</code>
    <button 
      class="iad-copy-button" 
      @click="navigator.clipboard.writeText($el.previousElementSibling.textContent); copied = true; setTimeout(() => copied = false, 2000)"
      x-text="copied ? '‚úì' : 'üìã'"
      :title="copied ? 'Copi√© !' : 'Copier'"
    ></button>
  </div>
</div>

<style>
  /* Styles sp√©cifiques au ColorSwatch */
  .iad-swatch {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .swatch-preview {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
    flex-shrink: 0;
  }

  .swatch-info {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .swatch-label {
    font-weight: 600;
    color: var(--iad-text-primary);
    margin-right: 0.5rem;
  }

  .swatch-code {
    font-family: monospace;
    font-size: 0.95rem;
    padding: 0.25rem 0.5rem;
    background: var(--iad-control-bg);
    border-radius: 6px;
    color: var(--iad-text-primary);
  }

  .iad-swatch .iad-copy-button {
    margin-left: auto;
  }
</style>
