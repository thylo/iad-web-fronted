---
interface Props {
  prev?: {
    href: string;
    label: string;
  };
  next?: {
    href: string;
    label: string;
  };
  courseHome?: {
    href: string;
    label: string;
  };
  currentPage?: number;
  totalPages?: number;
}

const {
  prev,
  next,
  courseHome = { href: '#', label: 'Retour au cours' },
  currentPage,
  totalPages
} = Astro.props;

const progress = currentPage && totalPages ? Math.round((currentPage / totalPages) * 100) : 0;
---

<nav class="course-navigation" aria-label="Navigation du cours">
  {progress > 0 && (
    <div class="progress-bar">
      <div class="progress-fill" style={`width: ${progress}%`}></div>
      <span class="progress-text">{currentPage} / {totalPages}</span>
    </div>
  )}

  <div class="nav-links">
    <div class="nav-prev">
      {prev ? (
        <a href={prev.href} class="nav-button">
          <span class="nav-arrow">←</span>
          <span class="nav-label">
            <span class="nav-direction">Précédent</span>
            <span class="nav-title">{prev.label}</span>
          </span>
        </a>
      ) : (
        <div></div>
      )}
    </div>

    <div class="nav-center">
      <a href={courseHome.href} class="nav-home">
        {courseHome.label}
      </a>
    </div>

    <div class="nav-next">
      {next ? (
        <a href={next.href} class="nav-button">
          <span class="nav-label">
            <span class="nav-direction">Suivant</span>
            <span class="nav-title">{next.label}</span>
          </span>
          <span class="nav-arrow">→</span>
        </a>
      ) : (
        <div></div>
      )}
    </div>
  </div>
</nav>

<style>
  .course-navigation {
    margin: 3rem 0;
    padding: 1.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    background: var(--sl-color-bg);
  }

  .progress-bar {
    position: relative;
    height: 0.5rem;
    background: var(--sl-color-gray-6);
    border-radius: 0.25rem;
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--sl-color-accent), var(--sl-color-accent-high));
    border-radius: 0.25rem;
    transition: width 0.3s ease;
  }

  .progress-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--sl-color-white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  .nav-links {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1rem;
    align-items: center;
  }

  .nav-prev {
    justify-self: start;
  }

  .nav-center {
    justify-self: center;
  }

  .nav-next {
    justify-self: end;
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-text);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    border-color: var(--sl-color-accent);
    background: var(--sl-color-bg-nav);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .nav-arrow {
    font-size: 1.25rem;
    color: var(--sl-color-accent);
    font-weight: bold;
  }

  .nav-label {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-direction {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--sl-color-gray-3);
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .nav-title {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .nav-home {
    padding: 0.5rem 1rem;
    background: var(--sl-color-gray-6);
    border-radius: 0.375rem;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--sl-color-text);
    transition: all 0.2s ease;
  }

  .nav-home:hover {
    background: var(--sl-color-gray-5);
  }

  @media (max-width: 768px) {
    .nav-links {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .nav-prev,
    .nav-next,
    .nav-center {
      justify-self: stretch;
    }

    .nav-center {
      order: -1;
    }

    .nav-button {
      width: 100%;
      justify-content: space-between;
    }

    .nav-home {
      display: block;
      text-align: center;
      width: 100%;
    }
  }
</style>
